{
  "name": "habit-tracker",
  "version": "1.0.0",
  "description": "A clean, offline desktop habit tracker built with Electron.",
  "author": "Tugu",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.tugu.habittracker",
    "productName": "habitManager",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
